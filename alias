# connects to the various disks that help us with data.
# don't autoconnect anywhere because you need to be behind the SAS VPN
alias mtbignw="sshfs daherr@orgrd061.unx.sas.com:/bignetwork/ $HOME/datasets/bignetwork"
alias unmtbignw="umount daherr@orgrd061.unx.sas.com:/bignetwork/"

alias mtbigdisk="sshfs daherr@rdcgrd320.unx.sas.com:/bigdisk/lax $HOME/datasets/bigdisk"
alias unmtbigdisk="umount daherr@rdcgrd320.unx.sas.com:/bigdisk/lax"

alias mtu="mount_smbfs //daherr@ge.unx.sas.com/U61/daherr $HOME/U"
alias unmtu="umount //daherr@ge.unx.sas.com/U61/daherr"

alias mtordsrv_d="mount_smbfs //daherr@ordsrv3-2k16.na.sas.com/D/ $HOME/ORDSRV/D"
alias unmtordsrv_d="umount $HOME/ORDSRV/D"

alias mtordsrv_e="mount_smbfs //daherr@ordsrv3-2k16.na.sas.com/E/ $HOME/ORDSRV/E"
alias unmtordsrv_e="umount $HOME/ORDSRV/E"

alias mtall="mtu  && mtbigdisk  && mtbignw  && mtordsrv_d  &&  mtordsrv_e"
alias unmtall="unmtu  && unmtbigdisk  && unmtbignw  && unmtordsrv_d  &&  unmtordsrv_e"
