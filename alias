# Start with some directory shortcuts
alias x="clear && ls"
alias ..="cd .. && clear && ls"
alias ...="cd ../.. && clear && ls"
alias ....="cd ../../.. && clear && ls"
alias .....="cd ../../../.. && clear && ls"
alias nwanalytics="pushd ~/Code/NetworkAnalytics && clear && ls"

# listing aliases to make it pretty
# exa arguments for ll that we then add things later:
# -l :: display files in a table with metadata
# --tree :: recurse directories into a tree
# --level :: limit depths of recursion
# --all :: show hidden and dot files
# --icons :: display Unicode icons by file names
# --group-directories-first :: list directories before files when sorting
# --time-style long-iso :: use timestamp down to the minute without using locale or current year
# --group :: list each file's group
# --header :: add header row to each column
# --git :: show git status if they exist for each file
# standard ll recurses two levels
alias ll="exa -l --tree --level 2 --all --icons --group-directories-first  --time-style long-iso --group --header"
# override lr and fully recurse through directories.
alias lr="exa -l --tree --ll --icons --group-directories-first --time-style long-iso --group --header"
# add a git status alias to ll
alias lg="ll --git"

# override these aliases to just the ll we defined above. Previously defined in zprezto utility/init.zsh
alias la="ll"
alias lk="ll"
alias lc="ll"
alias lu="ll"
alias lx="ll"

